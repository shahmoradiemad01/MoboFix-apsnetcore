@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="section-login padding-tb-100" dir="rtl">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="cr-login" data-aos="fade-up" data-aos-duration="2000" data-aos-delay="400">
                    <div class="form-logo">
                        <h2>ورود</h2>
                    </div>

                    <form id="account" method="post" class="cr-content-form">
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" type="email" placeholder="" class="cr-form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" ></label>
                            <input asp-for="Input.Password" type="password" placeholder="" class="cr-form-control">
                        </div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label cr-form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <br>
                        <div class="login-buttons">
                            <button type="submit" class="cr-button">ورود</button>
                            <a asp-page="Register" class="link">
                                 ایجادحساب
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
