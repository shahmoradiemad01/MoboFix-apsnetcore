@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<section class="section-register padding-tb-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="cr-register" data-aos="fade-up" data-aos-duration="2000" data-aos-delay="400">
                    <div class="form-logo">
                        <h2>ثبت نام</h2>
                    </div>
                    <form id="registerForm" class="cr-content-form" asp-route-returnUrl="@Model.ReturnUrl"
                        method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="cr-form-control" autocomplete="username"
                                        aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="cr-form-control" autocomplete="new-password"
                                        aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="cr-form-control"
                                        autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Input.Role"></label>
                                    <select asp-for="Input.Role" asp-items="ViewBag.Roles" class="cr-form-control"
                                        aria-required="true"></select>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Input.ShopName"></label>
                                        <input asp-for="Input.ShopName" class="cr-form-control" aria-required="true" />
                                        <span asp-validation-for="Input.ShopName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Input.ShopPhoneNumber"></label>
                                        <input asp-for="Input.ShopPhoneNumber" class="cr-form-control"
                                            aria-required="true" />
                                        <span asp-validation-for="Input.ShopPhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Input.CertificationCode"></label>
                                        <input asp-for="Input.CertificationCode" class="cr-form-control"
                                            aria-required="true" />
                                        <span asp-validation-for="Input.CertificationCode"
                                            class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="cr-register-buttons">
                                <button id="registerSubmit" type="submit" class="cr-button">ثبت‌ نام</button>
                                <a asp-page="Login" class="link">
                                    حساب کاربری دارید؟
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
